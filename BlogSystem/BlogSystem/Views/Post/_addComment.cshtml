@model BlogSystem.ViewModels.CommentViewModel

<h3>Add a comment</h3>
@using (Ajax.BeginForm("AddComment", new { Id = ViewData["postId"] }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "postDetails" }))
{
    <fieldset>
        @Html.LabelFor(c => c.Text)
        @Html.TextAreaFor(c => c.Text, new { @class = "form-control" })
    </fieldset><br />
    <input class="btn btn-primary" type="submit" name="submit-post" value="Add comment" />
}
