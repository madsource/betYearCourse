@model ProjectsTracker.ViewModels.PTaskViewModel

<h2>Task: @Model.Title</h2>

@using (Ajax.BeginForm("Report", "PTask", new { taskNumber = ViewData["counter"] },
                new AjaxOptions
                {
                    HttpMethod = "Post",
                    UpdateTargetId = "task-" + Model.Id,
                    OnSuccess = "onEditFormSuccess"
                },
                new { @class = "form-horizontal form-label-left" }
                ))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CreatedOn)
    @Html.HiddenFor(model => model.AuthorId)
    @Html.HiddenFor(model => model.OwnerId)
    @Html.HiddenFor(model => model.Author.Id)
    @Html.HiddenFor(model => model.Title)

        <div class="form-group">
            @Html.LabelFor(model => model.HoursSpend, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HoursSpend, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoursSpend, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProgressPercent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProgressPercent, new { htmlAttributes = new { @class = "knob", @data_width = "110", data_height = "120", data_displayPrevious = true, data_fgColor = "#26B99A", data_skin = "tron", data_thickness = ".2" } })
                @Html.ValidationMessageFor(model => model.ProgressPercent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save task" class="btn btn-primary" />
            </div>
        </div>
}
